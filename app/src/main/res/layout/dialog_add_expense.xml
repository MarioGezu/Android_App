<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/bg"
    app:cardElevation="8dp"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp">


        <!-- Spinner for Expense Type -->
        <Spinner
            android:id="@+id/expenseTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/expense_dialog"
            android:spinnerMode="dropdown"
            android:foregroundTint="@color/button_fg"
            android:popupBackground="@color/bg"/>

        <!-- Container for dynamically inflated expense fields -->
        <FrameLayout
            android:id="@+id/dynamicContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Add Expense Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addExpenseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="1000dp"
            android:layout_marginHorizontal="100dp"
            android:text="@string/add_expense"
            android:textStyle="bold"
            app:backgroundTint="@color/button_bg"
            android:textColor="@color/button_fg"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:textAllCaps="false"
            app:cornerRadius="12dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
